#%Module3.1.6#####################################################################
##
# for Tcl script use only
set     version         1.9.3

proc ModulesHelp { } {
        global version
        puts stderr "\tThis module loads VMD $version \n"
}

set     vmd_dir     /opt/apps/VMD/vmd-$version-opengl/vmd

module-whatis   'loads the VMD $version '
module-whatis   '\$ tar -xvf vmd-1.9.3.bin.LINUXAMD64-CUDA8-OptiX4-OSPRay111p1.opengl.tar.gz'
module-whatis   '\$ grep install_ vmd-1.9.3/configure '
module-whatis   '    \$install_bin_dir="/opt/apps/VMD/vmd-1.9.3-opengl"'
module-whatis   '    \$install_library_dir="/opt/apps/VMD/vmd-1.9.3-opengl/\$install_name"'
module-whatis  "\t HACK: soft link:  libOpenGL.so -> libGL.so   "
module-whatis  "\t HACK: soft link:  ln -sf ./vmd/scripts /opt/apps/VMD/vmd-1.9.3-opengl/lib "


prepend-path   VMDDIR           $vmd_dir
prepend-path   STRIDE_BIN       $vmd_dir/stride_LINUXAMD64
prepend-path   PATH             $vmd_dir
prepend-path   LD_LIBRARY_PATH  $vmd_dir
prepend-path   LD_LIBRARY_PATH  /usr/lib/nvidia-340
